@import 'common'

a 
  text-decoration: none 
  &:hover 
    text-decoration: none
ul 
  list-style =none
    
html
    font-size:  62.5%
    width: 640px
    min-height: 960px
    margin:0px
    padding:0px
body
    color : #2c2c2c
    font  : 1.2em Helvetica, Arial
    font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
    width: 640px
    height: 960px
    margin:0px
    padding:0px
.stack 
  width: 100%
  height: 100%

.stack > *:not(.active) 
  display: none


.factController
  width: 100%
  height: 100%
  min-height: 960px
  padding: 100px 90px 100px 90px
  background-color: #FF4522
  color:white 
  font-size: 55px
  font-weight: 100
  line-height: 80px
  box-sizing : border-box

  strong
    font-weight: 800
  p
    font-weight: 100
  .cross 
    font-size: 20px
    position: absolute  
    right: 30px 
    top: 30px 
    color:black


.button 
  box-sizing:border-box
  padding: 10px 20px 10px 20px 
  margin-top: 40px
  border-radius: 2px 
  background-color: #EEEEEE
  color: #ff4800
  font-size: 28px 
  display:block

.homeController
  box-sizing: border-box
  padding: 200px 100px 200px 100px
  text-align: center
  background-color:#1F2527
  img 
    margin-bottom: 120px
  form
    input, select
      width: 100%
      margin:0px 0px 5px 0px 
      padding:0px
      height: 60px
    input
      margin-top: 20px

.questionController
  background-color:#EDECEC
  min-height:  960px
  .filters
    box-sizing: border-box
    padding: 65px 120px 65px 120px
    h2
      font-size: 22px
      color: #2c2c2c
      font-weight: 400
      margin-bottom: 20px
    input
      width: 100%
      height: 60px 
      background-color: white
      font-size: 30px 
      font-weight: 200px
      margin: 0px 0px 6px 0px 
      box-sizing:border-box
      padding: 23px 

    a.addmore 
      width: 100%
      height: 60px 
      background-color: #DBDBDB
      font-size: 30px 
      font-weight: 200px
      margin: 0px 0px 6px 0px 
      box-sizing:border-box
      padding: 10px 
      color: white
      display:block 
  ul.matches
    list-style:none
    width: 100%
    margin:0px
    padding: 0px
    li
      width: 100%
      box-sizing:border-box
      height: 80px
      padding-left: 40px
      a
        font-size: 18px
        line-height: 80px
        font-family: 700

        color: #2c2c2c

    li:nth-child(2n)
      background-color: #EDECEC
    li:nth-child(2n+1)
      background-color:  #F5F5F5 


.clinicController
  width: 100%
  #map
    width: 100%
    height: 230px
    margin: 0px 
    padding: 0px 
  .closest
    width: 100%
    height: 100px
    text-align:center 
    background-color:  #EDECEC 
    font-size: 24px
    line-height: 100px
    a
      color:#2c2c2c
    img 
     margin-right: 20px

  .addAComent
    height: 150px
    width: 100%
    background-color: #202629
    color:white 
   
    
    .placeholder
      line-height: 150px
      font-size: 29px 
      text-align: center
      font-weight: 600
    .commentAdder
      display:none 

      .stars
        font-size:20px
        text-align: center
        .star
          color:white
          &.active 
            color: #FF4522
      textarea
        width: 100%
        margin:0px 0px
        padding: 10px
        height: 66px
        box-sizing: border-box
        display:block
        border-radius: 0px
      .button
        width: 100%
        display: block
        text-align: center
        color: white
        cursor:pointer
        margin: 0px
        padding: 10px 0px 10px 0px
        border-radius:0px
        color:#2c2c2c

  ul.clinicList 
    width: 100%
    text-align:center 
    list-style: none
    padding: 0px 
    margin:0px
    li 
      width: 100%
      height: 80px
      font-size: 18px
      font-weight: 200
      box-sizing: border-box
      text-align: center 
      line-height:80px
      a
        color:#2c2c2c
    li:nth-child(2n)
      background-color: #EDECEC
    li:nth-child(2n+1)
      background-color:  #F5F5F5 

header
  background-color:#202629
  height: 80px 
  box-sizing: border-box
  padding: 27px 50px 27px 50px
  position:relative
  img.logo
    width: 150px
  .pointer
    float:right



